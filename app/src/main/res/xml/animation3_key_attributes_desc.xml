<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start"
        app:duration="400"
        app:interpolator="bounce">

        <OnClick
            app:clickAction="toggle"
            app:target="@id/view" />

        <KeyFrameSet>
            <KeyAttribute
                android:scaleX="2"
                android:scaleY="2"
                app:framePosition="50"
                app:target="@id/textView" />
            <KeyPosition
                app:framePosition="30"
                app:keyPositionType="pathRelative"
                app:percentX="0.5"
                app:percentY="0.20"
                app:target="@id/view" />
            <KeyPosition
                app:framePosition="60"
                app:keyPositionType="pathRelative"
                app:percentX="-0.2"
                app:target="@id/view" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint android:id="@id/view">
            <CustomAttribute
                app:attributeName="backgroundColor"
                app:customColorValue="#F9A825" />
        </Constraint>

        <Constraint android:id="@id/textView">
            <PropertySet app:alpha="0" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint android:id="@id/view">
            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_height="100dp"
                app:layout_marginBottom="16dp"
                app:layout_marginEnd="16dp"
                app:layout_width="100dp" />
            <Transform app:rotation="180" />
            <CustomAttribute
                app:attributeName="backgroundColor"
                app:customColorValue="#1565C0" />
        </Constraint>

        <Constraint android:id="@id/textView">
            <PropertySet app:alpha="1" />
        </Constraint>
    </ConstraintSet>

</MotionScene>